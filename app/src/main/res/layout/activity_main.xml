<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#43196F">


    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="name@usm.my"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:textColorHint="#9C72C6"
        android:textCursorDrawable="@null"
        android:layout_alignRight="@+id/editTextPassword"
        android:layout_alignEnd="@+id/editTextPassword" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="password"
        android:ems="10"
        android:layout_below="@+id/editTextEmail"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:textColorHint="#9C72C6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textAllCaps="false"
        android:id="@+id/button"
        android:onClick="doLogin"
        android:background="#582C85"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignLeft="@+id/editTextPassword"
        android:layout_alignStart="@+id/editTextPassword"
        android:layout_alignRight="@+id/editTextPassword"
        android:layout_alignEnd="@+id/editTextPassword" />

    <ImageView
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/editTextEmail"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
